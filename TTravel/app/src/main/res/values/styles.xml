<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BotonPrincipal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/oceanBlue</item>
    </style>


    <style name="CustomSwitchPreferenceTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item> <!-- Tamaño del texto del título -->
    </style>

    <style name="CustomSwitchPreferenceSummary" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item> <!-- Tamaño del texto del resumen -->
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#ff0000</item>
        <item name="colorAccent">#ff0000</item>
        <item name="android:background">#CCCCCC</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:minHeight">30dp</item>
    </style>


    <style name="TemaPreferencia" parent="PreferenceThemeOverlay">
        <item name="android:textSize">45sp</item>
    </style>


</resources>