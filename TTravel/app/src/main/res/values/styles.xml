<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BotonPrincipal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/oceanBlue</item>
    </style>


    <style name="CustomSwitchPreferenceTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item> <!-- Tamaño del texto del título -->
    </style>

    <style name="CustomSwitchPreferenceSummary" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item> <!-- Tamaño del texto del resumen -->
    </style>



    <style name="TemaPreferencia" parent="PreferenceThemeOverlay">
        <item name="android:textSize">45sp</item>
    </style>


</resources>